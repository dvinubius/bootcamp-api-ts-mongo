{
  "compilerOptions": {
    "module": "NodeNext",
    "moduleResolution": "NodeNext",
    "baseUrl": "src",
    "sourceMap": true,
    "noImplicitAny": true,
    "target": "ES2020",
    "outDir": "dist",
    "strict": true,
    "skipLibCheck": true,
    "forceConsistentCasingInFileNames": true,
    "typeRoots": ["@types", "node_modules/@types"]
  },
  "$schema": "https://json.schemastore.org/tsconfig",
  "display": "Recommended",
  "include": [
    "./*.js",
    "src/**/*.ts",
    "src/server.ts",
    "src/seeder.ts",
    "src/models/Bootcamp.js"
  ],
  "exclude": ["node_modules", "**/*.spec.ts"]
}
